package me.struttle.plugins.events;

import java.util.ArrayList;
import java.util.List;

import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;
import org.bukkit.plugin.PluginManager;
import org.bukkit.plugin.java.JavaPlugin;

import me.struttle.plugins.events.commands.CommandBase;

public class Events extends JavaPlugin{
	
	CustomConfigFile m_SavedInventoriesConfig = new CustomConfigFile(getDataFolder(), "SavedInventories");
	List<CommandBase> m_Commands = new ArrayList<CommandBase>();
	private static Events m_Instance = null;
	
	public Events()
	{
		m_Instance = this;
		m_Commands.ad
	}
	
	@Override
	public void onEnable() {
		// TODO Auto-generated method stub
		PluginManager pm=getServer().getPluginManager();
		Log.Initalize(getLogger());
		m_SavedInventoriesConfig.Reload();
		getLogger().info("Events was loaded successfully");
		super.onEnable();
	}
	
	@Override
	public void onDisable() {
		// TODO Auto-generated method stub
		super.onDisable();
		getLogger().info("Events was disabled");
		getDataFolder();
	}
	
	@Override
	public boolean onCommand(CommandSender sender, Command command, String label, String[] args) {
		if(sender instanceof Player)
		{
			Player player = (Player) sender;
			if(label.equalsIgnoreCase("SaveInventory"))
			{
				SavePlayerInventory(player);
			}
			else if(label.equalsIgnoreCase("LoadInventory"))
			{
				LoadPlayerInventory(player);
			}
			else if(label.equalsIgnoreCase("event"))
			{
				
			}
		}
		return super.onCommand(sender, command, label, args);
	}
	
	private void SavePlayerInventory(Player player)
	{
		for(int i = 0; i < player.getInventory().getSize(); i++)
		{
			m_SavedInventoriesConfig.Get().set("inventories." + player.getName() + "." + i, player.getInventory().getItem(i));
		}
		m_SavedInventoriesConfig.Save();
	}
	
	private void LoadPlayerInventory(Player player)
	{
		for(int i = 0; i < player.getInventory().getSize(); i++)
		{
			ItemStack item = m_SavedInventoriesConfig.Get().getItemStack("inventories." + player.getName() + "." + i);
			player.getInventory().setItem(i, item);
		}
	}
}
